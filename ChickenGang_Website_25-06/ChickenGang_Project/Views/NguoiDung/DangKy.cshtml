@using CaptchaMvc;
@using CaptchaMvc.HtmlHelpers;

@model ChickenGang_Project.Models.ThanhVien
@using System.ComponentModel.DataAnnotations

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/DetailLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="container" style="margin-top:130px">
    <p style="font-size: 30px; margin:20px 0; "><a href="@Url.Action("Index", "Home")">Trang chủ</a> > <a href="@Url.Action("DangKy", "NguoiDung")">Đăng ký</a></p>

    <h2 style="text-align:center">Đăng ký thành viên</h2>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-6">
            <div class="form-group">
                <strong class="control-label col-md-2">Tên Tài Khoản</strong>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group align-content-center">
                <strong class="control-label col-md-2">Mật khẩu</strong>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="XacNhanMatKhau">
                    Mật khẩu <br /> xác nhận
                </label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line input-validation-error"
                           data-val="true" data-val-required="Phải nhập mật khẩu xác nhận!"
                           id="XacNhanMatKhau" name="XacNhanMatKhau" type="password" value="" aria-
                           describedby="XacNhanMatKhau-error" aria-invalid="true">

                    @ViewData["NhapMKXN"]
                    @ViewData["MatKhauGiongNhau"]
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    <h4 style="color:red">@ViewBag.error</h4>
                </div>
            </div>


            <div class="form-group">
                <strong class="control-label col-md-2">Số điện thoại</strong>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <strong class="control-label col-md-2">Họ và tên</strong>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <strong class="control-label col-md-2">Địa chỉ</strong>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <strong class="control-label col-md-2">Câu hỏi bí mật</strong>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.CauHoi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CauHoi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <strong class="control-label col-md-2">Câu trả lời</strong>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.CauTraLoi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CauTraLoi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <strong class="control-label col-md-2">Xác nhận</strong>
                <div class="col-md-10">
                    @Html.Captcha(5)
                </div>

                <h3 style="color:red">@ViewBag.ThongBao</h3>
            </div>
        </div>
        <div class="clearfix">
            <button type="submit" class="signup">Đăng ký</button>
        </div>
    </div>
</div>
}


